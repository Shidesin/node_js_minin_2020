<h1>Add course page</h1>

<form action="/add" method="post">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required>
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Input course name" ></span>
    </div>

    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" required min="10">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Input price" ></span>
    </div>

    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required>
        <label for="img">URL image</label>
        <span class="helper-text" data-error="Input url-path image" ></span>
    </div>

    <button class="btn btn-primary">Add course</button>
</form>                                   