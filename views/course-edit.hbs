<h1>Edit {{courseModel.title}}</h1>

<form action="/courses/edit" method="post">
    <div class="input-field">
        <input name="title" value="{{courseModel.title}}" id="title" type="text" class="validate" required>
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Input courseModel name"></span>
    </div>

    <div class="input-field">
        <input name="price" value="{{courseModel.price}}" id="price" type="number" class="validate" required min="10">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Input price"></span>
    </div>

    <div class="input-field">
        <input name="img" value="{{courseModel.img}}" id="img" type="text" class="validate" required>
        <label for="img">URL image</label>
        <span class="helper-text" data-error="Input url-path image"></span>
    </div>

    <input name="id" value="{{courseModel.id}}" type="hidden">
    <button type="submit" class="btn btn-primary">Edit courseModel</button>
</form>
<form class="remove-btn" action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{courseModel._id}}">
    <button class="btn red">Remove courseModel</button>
</form>